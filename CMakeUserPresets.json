{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "intallloc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "D:/dev/install",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "D:/dev/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-64-debug-vcpkg",
            "inherits": [
                "vcpkg",
                "intallloc",
                "windows-64-default-debug"
            ]
        },
        {
            "name": "windows-64-release-vcpkg",
            "inherits": [
                "vcpkg",
                "intallloc",
                "windows-64-default-release"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-64-debug-vcpkg",
            "configurePreset": "windows-64-default-debug"
        },
        {
            "name": "windows-64-release-vcpkg",
            "configurePreset": "windows-64-release-vcpkg"
        }
    ]
}
